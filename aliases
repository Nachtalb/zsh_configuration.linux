#!/bin/zsh

# # # # # # # # # # # # #
#    Alias Config     #
# # # # # # # # # # # # #

# Deepin Linux
# Open given path in the dde-file-manager, while the output is hidden
alias open='f() { dde-file-manager &>/dev/null $1 & };f'

# Buildout
alias pin='bin/instance'
alias pbo='bin/buildout'
# Instance
alias pinf='bin/instance fg'

# Basic Builtin
alias la='ls -lAhX --color'
alias ls='ls -GhX --color'
alias ll='ls -lX --color'
alias grep='grep --color'
alias rmf='rm -rf'

# Aptitude
alias update='sudo apt update'
alias upgrade='sudo apt upgrade'

# GIT
# rebase
alias grc='git rebase --continue'
alias gri='git rebase -i'
alias gra='git rebase --abort'
# commit
alias gca='git commit --all --amend --no-edit'
alias gc='git commit -m'
# push
alias gpf='git push --force'
alias gp='git push'
# misc
alias glog='git log --graph'
alias gcp='git cherry-pick'
alias gco='git checkout'
alias gst='git status'

# Misc
alias fsize='du -sh' # Show dictionary size
